<% if(item.reviews.length) {%>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Review</th>
      </tr>
    </thead>
    <tbody>
      <% item.reviews.forEach(review => { %>
        <tr>
          <td><%= review.createdAt.toLocaleDateString() %></td>
          <td><%= review.content %></td>
          <form action="/<%=category %>/<%=id %>/reviews?_method=DELETE" method="POST">
            <button type="sumbit">X</button>
          </form>
        </tr>
     <% }) %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reivews Yet</h5>
<% } %>

  <form action="/<%=category %>/<%=id %>/reviews" method="POST">
    <label>Rating:</label>
    <label>Leave a Review</label>
    <textarea name="content"></textarea>
    <input type="submit" value="Add Review">
  </form>


